<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <referenceBlock name="customer_form">
                <!-- add new tab to customer details form to place MOBI related fields -->
                <block class="Praxigento\Core\Block\Adminhtml\Customer\Edit\Tabs\Mobi"
                       name="customer_edit_tab_mobi"
                       template="Magento_Customer::tab/view.phtml">
                    <arguments>
                        <argument name="sort_order" xsi:type="number">21</argument>
                    </arguments>
                </block>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>
