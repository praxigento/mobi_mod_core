<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <!-- Repos -->
    <preference for="Praxigento\Core\Repo\IBasic"
                type="Praxigento\Core\Repo\Def\Basic"/>
    <preference for="Praxigento\Core\Repo\ITransactionManager"
                type="\Praxigento\Core\Repo\Def\TransactionManager"/>
    <preference for="Praxigento\Core\Repo\ITransactionDefinition"
                type="Praxigento\Core\Repo\Def\TransactionDefinition"/>

    <!-- Services -->

    <!-- Tools -->
    <preference for="Praxigento\Core\Tool\IConvert"
                type="Praxigento\Core\Tool\Def\Convert"/>
    <preference for="Praxigento\Core\Tool\IDate"
                type="Praxigento\Core\Tool\Def\Date"/>
    <preference for="Praxigento\Core\Tool\IFormat"
                type="Praxigento\Core\Tool\Def\Format"/>
    <preference for="Praxigento\Core\Tool\IPeriod"
                type="Praxigento\Core\Tool\Def\Period"/>

    <!-- Other -->
    <preference for="Psr\Log\LoggerInterface"
                type="Praxigento\Logging\Logger"/>
    <!-- Bind M2 DB proxe to MOBI DBA -->
    <type name="Praxigento\Core\Lib\Context\DbAdapter">
        <arguments>
            <argument name="m2Resource" xsi:type="object">Magento\Framework\App\ResourceConnection\Proxy</argument>
        </arguments>
    </type>


    <!-- API Data -->
    <preference for="Praxigento\Core\Api\Data\BaseInterface"
                type="Praxigento\Core\Api\Data\Def\Base"/>
</config>
