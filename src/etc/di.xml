<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../../../lib/internal/Magento/Framework/ObjectManager/etc/config.xsd">

    <!-- Context -->
    <preference for="Praxigento\Core\Lib\Context\IDbAdapter"
                type="Praxigento\Core\Lib\Context\DbAdapter"/>
    <preference for="Praxigento\Core\Lib\Context\ITransactionManager"
                type="Praxigento\Core\Lib\Context\DbAdapter"/>
    <preference for="Praxigento\Core\Lib\Context\ITransactionDefinition"
                type="Praxigento\Core\Lib\Context\Def\TransactionDefinition"/>

    <!-- Repos -->
    <preference for="Praxigento\Core\Lib\Repo\IBasic"
                type="Praxigento\Core\Repo\Def\Basic"/>

    <!-- Services -->
    <preference for="Praxigento\Core\Lib\Service\IRepo"
                type="Praxigento\Core\Lib\Service\Repo\Call"/>

    <!-- Tools -->
    <preference for="Praxigento\Core\Lib\IToolbox"
                type="Praxigento\Core\Lib\Tool\Box"/>

    <!-- Other -->
    <preference for="Psr\Log\LoggerInterface"
                type="Praxigento\Logging\Logger"/>
    <!-- Bind M2 DB proxe to MOBI DBA -->
    <type name="Praxigento\Core\Lib\Context\DbAdapter">
        <arguments>
            <argument name="m2Resource" xsi:type="object">Magento\Framework\App\ResourceConnection\Proxy</argument>
        </arguments>
    </type>


    <!-- API Data -->
    <preference for="Praxigento\Core\Api\Data\BaseInterface"
                type="Praxigento\Core\Api\Data\Def\Base"/>
</config>
